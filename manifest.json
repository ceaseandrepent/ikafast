{
  "name": "ikafast",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Extension for ikariam.com",
 
  "update_url": "http://content.wuala.com/contents/enlighter/public/ikafast/update.xml/?dl=1",

  "background": {
    //"scripts": [ "script/background.js" ],
    "page": "background.html"
  },

  "icons": {
    "48": "icons/icon48.png"   // for "extensions" chrome page
  },
 
  "content_scripts": [ {
      "js": [ "script/get-content.js" ],
      "matches": [ "http://*.ikariam.com/*" ],
      "run_at": "document_end"
   } ],

  "web_accessible_resources": [
    "imgs/ally_message.png",
    "imgs/army.png",
    "imgs/diplomat_active.png",
    "imgs/fleet.png",
    "imgs/general_active.png",
    "imgs/general_alert.png",
    "imgs/res.png",
    "imgs/transporter.png"
  ],

  "permissions": [
	"notifications",
    "http://*.ikariam.com/*",
    "tabs"
  ]
}
